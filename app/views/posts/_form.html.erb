<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <h2><%= pluralize(@post.errors.count, "error") %>prevented this post form saving</h2>
    <ul>
  	  <% @event.errors.full_messages.each do |msg|%>
  	  <li><%= msg %></li>
  	<% end -%>
  </ul>
  <% end -%>
<%= f.label :title %><br>
<%= f.text_field :title %>

<div class="form-group">
   <%= f.label :category_id, "Category" %>
    <%#= f.select :category_id, Category.all.map{ |x| [x.name, x.id]} ,:class => "form-control"%>

    <%#= f.collection_select :category_id, Category.all, :id, :name, :class => "form-control", :prompt => "Please select"%>
   <% Category.all.each do |c| %>
     <%= f.radio_button :category_id, c.id %><%=c.name %> 
   <% end -%>

  </div>

<br>
<br>
<%= f.label :content, "Write your article here" %><br>
<%= f.text_area :content %>



<%= f.submit %>



<% end -%>